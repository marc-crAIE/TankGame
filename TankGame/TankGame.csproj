<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <BaseOutputPath>$(SolutionDir)bin\</BaseOutputPath>
    <BaseIntermediateOutputPath>$(SolutionDir)bin-int\</BaseIntermediateOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Textures\tank body.png" />
    <None Remove="Assets\Textures\tank turret.png" />
    <None Remove="Assets\Textures\tank_body.png" />
    <None Remove="Assets\Textures\tank_turret.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Textures\tank body.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Textures\tank turret.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Libs\RayEngine\RayEngine\RayEngine.csproj" />
  </ItemGroup>

</Project>
